{
	"name": "colis/relicta",
	"description": "WordPress project for the Relicta website",
	"type": "project",
	"license": "GPL-3.0-only",
	"homepage": "https://relicta.com",
	"authors": [
		{
			"name": "Carmine Colicino",
			"email": "carminecolicino@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"config": {
		"autoloader-suffix": "Relicta",
		"preferred-install": "dist",
		"process-timeout": 600,
		"sort-packages": true
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "path",
			"url": "wp-content/plugins/relicta-core",
			"name": "colis/relicta-core",
			"options": {
				"symlink": false
			}
		}
	],
	"require": {
		"php": ">=7.4",
		"colis/relicta-core": "*",
		"wpackagist-plugin/wordpress-seo": "^18.5"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1.3",
		"squizlabs/php_codesniffer": "^3.6.2",
		"wp-cli/wp-cli-bundle": "^2.5.0",
		"wp-coding-standards/wpcs": "^2.3.0",
		"wpackagist-plugin/query-monitor": "^3.8.2"
	},
	"extra": {
		"installer-paths": {
			"wp-content/plugins/{$name}": [
				"type:wordpress-plugin"
			],
			"wp-content/themes/{$name}": [
				"type:wordpress-theme"
			]
		}
	},
	"scripts": {
		"lint": "phpcs .",
		"lint-fix": "phpcbf ."
	}
}
